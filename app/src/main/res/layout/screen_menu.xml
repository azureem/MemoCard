<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuwka"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/info_go"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/above" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="324dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/easy"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginTop="56dp"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/bg_btns"
        android:text="Easy"
        android:fontFamily="@font/bbold"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img"
        app:layout_constraintVertical_bias="0.617" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/medium"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginHorizontal="100dp"
        android:text="Medium"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:fontFamily="@font/bbold"
        android:layout_marginTop="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btns"
        app:layout_constraintTop_toBottomOf="@id/easy"
        app:layout_constraintStart_toStartOf="@id/easy"
        app:layout_constraintEnd_toEndOf="@id/easy"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hard"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginTop="18sp"
        android:fontFamily="@font/bbold"
        android:layout_marginHorizontal="100dp"
        android:background="@drawable/bg_btns"
        android:text="Hard"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/medium"
        app:layout_constraintStart_toStartOf="@id/medium"
        app:layout_constraintEnd_toEndOf="@id/medium"/>

</androidx.constraintlayout.widget.ConstraintLayout>